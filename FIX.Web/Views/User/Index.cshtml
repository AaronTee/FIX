@model IEnumerable<FIX.Web.Models.UserViewModel>
@{
    ViewBag.Title = "User Management";
}

<div class="panel panel-primary">
    <div class="panel-body">
        <a id="A1" href="@Url.Action("Create")"
           class="btn btn-action">
            <span class="glyphicon glyphicon-plus"></span> User
        </a>

        <table
               data-toggle="table"
               data-search="true"
               data-side-pagination="server"
               data-pagination="true"
               data-classes="table table-no-bordered" 
               data-page-list="[10, 25, 50, 100]"
               data-url="@(Url.Content("~/"))User/GetListViewData"
               data-unique-id="UserId"
               data-search-placeholder="Search Username">
            <thead>
                <tr>
                    <th data-field="Username" data-sortable="true">Username</th>
                    <th data-field="Email">Email</th>
                    <th data-field="RoleName">Role</th>
                    <th data-field="Status" data-sortable="true">Status</th>
                    <th data-field="ActionLinks" data-formatter="LinkFormatter">Action</th>
                </tr>
            </thead>
        </table>


