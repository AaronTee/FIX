@model IEnumerable<FIX.Web.Models.UserViewModel>

<div class="book-example panel panel-primary">
    <div class="panel-heading panel-head">Users Listing</div>
    <div class="panel-body">
        <a id="A1" href="@Url.Action("Create")"
           class="btn btn-success">
            <span class="glyphicon glyphicon-plus"></span> User
        </a>
        <div>
            <table id="dttable" class="table table-bordered" style="width: 100%">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Username)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>@Html.DisplayNameFor(model => model.RoleName)</th>
                        <th class="nosort">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Username)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RoleName)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit",
                        new { id = item.Id }, new { @class = "btn btn-success" })
                                @Html.ActionLink("Details", "Detail",
                        new { id = item.Id }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Delete", "Delete",
                        new { id = item.Id }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div> 

@section scripts{
    @*DataTable*@
    <script src="http://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <link href="//cdn.datatables.net/1.10.13/css/jquery.dataTables.min.css" rel="stylesheet">

    <link type="text/css" href="https://cdn.datatables.net/select/1.2.1/css/select.dataTables.min.css" rel="stylesheet" />
    <script type="text/javascript" src="https://cdn.datatables.net/select/1.2.1/js/dataTables.select.min.js"></script>

    <script src="@Url.Content("~/Scripts/dttable.datatable.custom.js")" type="text/javascript"></script>

    <script>
        $("#dttable").dtTable({
            enableCheckbox: false
        });
    </script>
}