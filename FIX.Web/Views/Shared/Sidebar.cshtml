            <ul>
                @if (User.IsInRole(DBConstant.DBCRole.User))
                {
                <li>
                    @Html.ActionLink("Manage", "Index", "ManageAccount", routeValues: null, htmlAttributes: new { title = "Manage", @class = "btn btn-sidebar-primary" })
