@model FIX.Web.Models.HomeViewModels

@{
    ViewBag.Title = "Home Page";
    var userJoinDate = Model.userModel.CreatedTimestamp.ToUserLocalDate(User.Identity.GetUserTimeZone());
}



<div class="panel dark-background">
    <div class="panel-heading">
        <h2 class="headline red">Profile</h2>

        <div class="row">
            <div class="col-md-6">
                <table class="table-display-list">
                    <tr>
                        <td>Member ID / Name</td>
                        <td>@Html.DisplayFor(x => x.userModel.Username) / @Html.DisplayFor(x => x.userModel.Name)</td>
                    </tr>
                    <tr>
                        <td>Date Joined</td>
                        <td>@Html.DisplayFor(x => userJoinDate)</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-usd fa-3x before-huge"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@Html.DisplayFor(x => x.WalletBalance)</div>
                        <div>E-Wallet Balance</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-area-chart fa-3x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@Html.DisplayFor(x => x.BonusAmount)</div>
                        <span>Bonus Amount</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-th-large fa-3x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@Html.DisplayFor(x => x.ActivePackagesCount)</div>
                        <div>Active Package(s)</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
